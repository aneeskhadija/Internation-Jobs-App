<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.JobDetails"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/jobdet_firstlayout"
            >

            <ImageView
                android:id="@+id/imagelog"
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/applogointer" />

            <ImageView
                android:id="@+id/backbtn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:onClick="backBtn"
                android:src="@drawable/backbtn" />

            <TextView
                android:id="@+id/JobsDetail_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imagelog"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text="Jobs Details"
                android:textColor="#2196F3"
                android:textSize="20dp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/titleTxt"
                android:text="Title"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_below="@+id/JobsDetail_txt"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:fontFamily="sans-serif-medium"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titleTxt"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="Shan"
                android:textSize="15dp"
                android:fontFamily="sans-serif-medium"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="15dp"
                android:background="@color/purple_700"
                android:id="@+id/linetxt1"
                android:layout_below="@+id/title"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/DescriptionTxt"
                android:text="Description"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:layout_below="@+id/linetxt1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                />

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/DescriptionTxt"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="Shan"
                android:fontFamily="sans-serif-medium"
                android:textSize="15dp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="15dp"
                android:background="@color/purple_700"
                android:id="@+id/linetxt2"
                android:layout_below="@+id/description"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/RequirementsTxt"
                android:text="Requirements"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_below="@+id/linetxt2"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:fontFamily="sans-serif-medium"/>

            <TextView
                android:id="@+id/requirements"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/RequirementsTxt"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="Shan"
                android:textSize="15dp"
                android:fontFamily="sans-serif-medium"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="15dp"
                android:background="@color/purple_700"
                android:id="@+id/linetxt3"
                android:layout_below="@+id/requirements"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/jobdet_secondlayout"
                android:orientation="vertical"
                android:layout_below="@id/linetxt3"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/CompanyTxt"
                        android:text="Company"
                        android:textSize="18dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-medium"/>

                    <TextView
                        android:id="@+id/countryTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Country"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"/>



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/companyDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:text="Aims Tech"
                        android:textSize="15dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-medium"/>
                    <TextView
                        android:id="@+id/country"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="Pakistan"
                        android:textSize="15dp"
                        />

                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/purple_700"
                    android:id="@+id/linetxt4"
                    android:layout_below="@+id/requirements" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/third_layout_jobdet"
                android:layout_below="@+id/jobdet_secondlayout"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/UploadDateTxt"
                    android:text="Upload Date"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"/>

                <TextView
                    android:text="Expiry Date"
                    android:id="@+id/ExpirydateTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"/>






            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/third_layout_jobdet"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/update"
                    android:text="03/27/2022"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"/>
                <TextView
                    android:text="03/27/2022"
                    android:id="@+id/exdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:textSize="15dp"
                    />


            </LinearLayout>


            <Button
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/third_layout_jobdet"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:background="@drawable/custombtn"
                android:onClick="applYLink"
                android:layout_marginBottom="10dp"
                android:text="Apply Now " />
        </RelativeLayout>
    </ScrollView>


    <com.buntyapps.adhelper.AdmobBanner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:AdMobBannerID="@string/bnr"
        android:gravity="center"/>



</LinearLayout>